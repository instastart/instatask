    <script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/introHCI.js"></script>

	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>      
</head>

<body>
    <div class="container">

	<h1>Instastart</h1>
    <a href="/settings"><button class = "button-primary">Settings</button></a><a href="/logout"><button class = "button-primary space">Logout</button></a>



    <form action="/" method="post" class = "filter">
    	<h4>Filter:</h4>
    	Status: <select name="status"><option value="in progress">in progress</option><option value="completed" {{#if ff.stat2}}selected{{/if}}>completed</option></select></a><br>
    	Location: <select name="location">
    			<option value="All">All</option>
    		{{#each ff.locs}}
    			<option value="{{loc}}" {{#if sel}}selected{{/if}}>{{loc}}</option>
    		{{/each}}
    </select><br>
    	Category: <select name="category">
    	    <option value="All">All</option>
    		{{#each ff.cats}}
    			<option value="{{cat}}" {{#if sel}}selected{{/if}}>{{cat}}</option>
    		{{/each}}
    </select><br>
    	Difficulty: <input type="checkbox" name="diffe" value="easy" {{#if ff.diffe}}checked{{/if}}> Easy
  <input type="checkbox" name="diffm" value="medium" {{#if ff.diffm}}checked{{/if}}> Medium
  <input type="checkbox" name="diffh" value="hard" {{#if ff.diffh}}checked{{/if}}> Hard

  <br>
  Duration (hrs): 
  <input type="text" id="duration" name="duration" readonly style="border:0; color:#f6931f; font-weight:bold;">
  <input type="hidden" name="mindurr" id="mindurr" value="{{ ff.mindurr }}">
  <input type="hidden" name="maxdurr" id="maxdurr" value="{{ ff.maxdurr }}">
  <div id="slider-range"></div>

  

  <br>
    <input type="hidden" name="tofilter" value="true">
    <input type="submit" class = "button-primary" value="Filter" />


    </form>

	{{#if notification}}
    <div>{{ notification }}</div>
    {{/if}}

    {{#each tasks}}
    <div class="task" id="task{{id}}"> 
		<h4>{{ title }}</h4>
		<p>Category: {{ category }}</p>
		<p>Location: {{ location }}</p>
		<p>Difficulty: {{ difficulty }}</p>
		<p>Duration: {{ duration }} hours</p>
		<a href="/task/{{ id }}"><button class = "button-primary">Edit</button></a>
		<button class = "button-primary" onclick="complete('{{id}}')" class = "space">Completed</button>

	</div>
    
    {{/each}}


    <br>
    <a href="/add"><button class = "button-primary">Add a new task</button></a>
    



</div>

</body>
</html>
